#!/bin/sh

set -e

directory=$(dirname $0)/../../..
target_directory=$directory/target/release_test

while getopts l: option; do
  case $option in
  l)
    libraries="$libraries $OPTARG"
    ;;
  esac
done

shift $(expr $OPTIND - 1)

script=$1
shift 1

compile() (
  if [ -n "$STAK_HOST" ]; then
    $STAK_HOST $directory/compile.scm
  else
    $target_directory/stak-compile
  fi
)

cat $directory/prelude.scm $libraries $script | compile $STAK_COMPILE_OPTIONS >main.bc
$target_directory/stak-interpret main.bc "$@"
